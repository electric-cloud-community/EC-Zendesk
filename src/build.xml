<project name="EC-Zendesk" default="package" basedir=".">
  <description>
    Build the EC-Zendesk plugin
  </description>

  <!-- Plugin-specific properties -->
  <property name="pluginKey" value="EC-Zendesk" />
  <property name="pluginVersion" value="1.0.0.33" />

  
  <!-- Java code specific properties -->
  <property name="gwtModules" value="ecplugins.Zendesk.ConfigurationManagement" />
  <property name="package.export.src" value="PLUGIN.srcs"/>

    <!-- Package sources for exported utility classes. -->
    <fileset id="PLUGIN.srcs" dir="${dir.src}">
      <include name="**/PluginConfigList.java"/>
      <include name="**/PluginConfigListLoader.*"/>
    </fileset>
        
        
        <fileset id="images" dir="${dir.htdocs}">
      <include name="**/PluginConfigList.java"/>
      <include name="**/PluginConfigListLoader.*"/>
    </fileset>
 
  <path id="extras">
    <!-- Add extra jars that need to be in the classpath for building the 
         plugin here. For example:

         <pathelement location="lib/smartgwt.jar"/>

         will grab the smartgwt jar from the lib directory of the plugin.

         Note that you must also add the jar to the "Referenced Libraries" 
         section of your plugin project for Eclipse to recognize the classes in
         the jar.

         Typically, you must also add an <inherits> element to the .gwt.xml 
         file for a component that uses classes from the third-party package.
    -->
  </path>
  <property name="gwt.path.extras" value="extras" />

  <import file="/opt/electriccloud/CommanderSDK/build/buildTargets.xml" />
</project>